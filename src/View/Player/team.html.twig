{% extends 'layout.html.twig' %}

{% block content %}
    <h1>New Team</h1>
        <div class="container">
            <div class="row justify-content-around">
                {% for player in players %}
                <div class="col-1-md-3-lg-4 pd-4">
                        <div class="card" style="width: 15rem;">
                            <img class="card-img-top" src="{{ player.portrait }}" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">{{ player.lastname }} {{ player.firstname }}</h5>
                                <a href="/newteam/player/{{ player.id }}" class="btn btn-primary">Voir Statistiques</a>
                            </div>
                        </div>
                </div>
                {% endfor %}
            </div>
            <a href="/newteam/addplayer" class="btn btn-primary">Ajouter un joueur</a>
        </div>
{% endblock %}
